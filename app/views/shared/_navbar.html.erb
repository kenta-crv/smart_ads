<!-- Navbar -->
<nav class="bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-500 text-white shadow">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16">

      <!-- Left side (Logo) -->
      <div class="flex-shrink-0 flex items-center">
        <%= link_to root_path, class: "text-2xl font-bold tracking-tight hover:opacity-90 transition" do %>
          Smart Ads
        <% end %>
      </div>

      <!-- Center (Links) -->
      <div class="hidden md:flex space-x-6 items-center">
        <%= link_to "Home", root_path, class: "hover:text-gray-100 transition" %>
        <%= link_to "Features", "#features", class: "hover:text-gray-100 transition" %>
        <%= link_to "Pricing", "#pricing", class: "hover:text-gray-100 transition" %>
        <%= link_to "Contact", "#contact", class: "hover:text-gray-100 transition" %>
      </div>

      <!-- Right side -->
      <div class="flex items-center space-x-4">
        <% if admin_signed_in? %>
          <!-- Admin dropdown -->
          <div x-data="{ open: false }" class="relative">
            <button @click="open = !open" class="flex items-center space-x-2 focus:outline-none">
              <span><%= current_admin.email %></span>
              <svg class="w-4 h-4 transform transition" :class="{ 'rotate-180': open }" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </button>

            <div x-show="open" @click.away="open = false"
                 class="absolute right-0 mt-2 w-48 bg-white text-gray-800 rounded-lg shadow-lg">
              <%= link_to "Dashboard", admin_root_path, class: "block px-4 py-2 hover:bg-gray-100" %>
              <%= link_to "Logout", destroy_admin_session_path,
                    data: { turbo_method: :delete },
                    class: "block px-4 py-2 hover:bg-gray-100" %>
            </div>
          </div>

        <% elsif user_signed_in? %>
          <!-- User dropdown -->
          <div x-data="{ open: false }" class="relative">
            <button @click="open = !open" class="flex items-center space-x-2 focus:outline-none">
              <span><%= current_user.email %></span>
              <svg class="w-4 h-4 transform transition" :class="{ 'rotate-180': open }" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </button>

            <div x-show="open" @click.away="open = false"
                 class="absolute right-0 mt-2 w-48 bg-white text-gray-800 rounded-lg shadow-lg">
              <%= link_to "Dashboard", user_root_path, class: "block px-4 py-2 hover:bg-gray-100" %>
              <%= link_to "Logout", destroy_user_session_path,
                    data: { turbo_method: :delete },
                    class: "block px-4 py-2 hover:bg-gray-100" %>
            </div>
          </div>

        <% else %>
          <!-- Guest links -->
          <%= link_to "Sign Up", new_user_registration_path, class: "px-4 py-2 bg-white text-indigo-600 font-semibold rounded-lg shadow hover:bg-gray-100 transition" %>
          <%= link_to "Client Login", new_user_session_path, class: "px-4 py-2 bg-white text-indigo-600 font-semibold rounded-lg shadow hover:bg-gray-100 transition" %>
          <%= link_to "Admin Login", new_admin_session_path, class: "px-4 py-2 bg-pink-600 text-white font-semibold rounded-lg shadow hover:bg-pink-700 transition" %>
        <% end %>
      </div>
    </div>
  </div>
</nav>
