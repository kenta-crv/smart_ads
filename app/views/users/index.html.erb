<div class="px-8 py-10 bg-gray-50 min-h-screen">
  <h1 class="text-3xl font-bold text-gray-800 mb-6">Users</h1>

  <div class="mb-6">
    <%= link_to "➕ New User", new_user_path, class: "px-5 py-2 bg-indigo-600 text-white rounded-xl hover:bg-indigo-700" %>
  </div>

  <div class="bg-white rounded-xl shadow overflow-x-auto">
    <table class="w-full text-left border-collapse">
      <thead class="bg-gray-100 text-gray-600 uppercase text-sm">
        <tr>
          <th class="py-3 px-6">ID</th>
          <th class="py-3 px-6">Name</th>
          <th class="py-3 px-6">Email</th>
          <th class="py-3 px-6">Company</th>
          <th class="py-3 px-6">Domain</th>
          <th class="py-3 px-6">API Key</th>
          <th class="py-3 px-6">Created</th>
          <th class="py-3 px-6 text-right">Actions</th>
        </tr>
      </thead>
      <tbody class="text-gray-700">
        <% @users.each do |user| %>
          <tr class="border-t hover:bg-gray-50">
            <td class="py-3 px-6"><%= user.id %></td>
            <td class="py-3 px-6"><%= "#{user.first_name} #{user.last_name}" %></td>
            <td class="py-3 px-6"><%= user.email %></td>
            <td class="py-3 px-6"><%= user.company_name %></td>
            <td class="py-3 px-6"><%= user.domain %></td>
            <td class="py-3 px-6 truncate"><%= user.api_key %></td>
            <td class="py-3 px-6"><%= user.created_at.strftime("%Y-%m-%d") %></td>
            <td class="py-3 px-6 text-right space-x-3">
              <%= link_to "👁", user_path(user), class: "hover:text-indigo-600" %>
              <%= link_to "✏️", edit_user_path(user), class: "hover:text-yellow-600" %>
              <%= link_to "🗑", user_path(user), data: { turbo_method: :delete, confirm: "Are you sure?" }, class: "hover:text-red-600" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
