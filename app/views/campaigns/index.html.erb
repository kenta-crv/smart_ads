<div class="p-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold">My Campaigns</h1>
    <%= link_to "New Campaign", new_user_campaign_path(current_user), class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg" %>
  </div>

  <% if @campaigns.any? %>
    <table class="w-full border border-gray-200 bg-white shadow-sm rounded-lg">
      <thead class="bg-gray-100">
        <tr>
          <th class="px-4 py-3 text-left">Title</th>
          <th class="px-4 py-3 text-left">Status</th>
          <th class="px-4 py-3 text-left">Scheduled At</th>
          <th class="px-4 py-3 text-left">Created At</th>
          <th class="px-4 py-3 text-right">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @campaigns.each do |campaign| %>
          <tr class="border-t hover:bg-gray-50">
            <td class="px-4 py-3"><%= campaign.title %></td>
            <td class="px-4 py-3 capitalize"><%= campaign.status %></td>
            <td class="px-4 py-3"><%= campaign.scheduled_at&.strftime("%b %d, %Y %H:%M") || "-" %></td>
            <td class="px-4 py-3"><%= campaign.created_at.strftime("%b %d, %Y") %></td>
            <td class="px-4 py-3 text-right space-x-2">
              <%= link_to "View", user_campaign_path(current_user, campaign), class: "text-blue-600 hover:underline" %>
              <%= link_to "Edit", edit_user_campaign_path(current_user, campaign), class: "text-yellow-600 hover:underline" %>
              <%= link_to "Delete", user_campaign_path(current_user, campaign),
                  method: :delete, data: { confirm: "Are you sure?" },
                  class: "text-red-600 hover:underline" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="text-gray-500 mt-4">No campaigns found.</p>
  <% end %>
</div>
