<%= form_with model: [:user, campaign], class: "space-y-4" do |f| %>
  <div>
    <%= f.label :title, class: "block text-gray-700 font-semibold" %>
    <%= f.text_field :title, class: "w-full border rounded-lg p-2" %>
  </div>

  <div>
    <%= f.label :body, class: "block text-gray-700 font-semibold" %>
    <%= f.text_area :body, rows: 4, class: "w-full border rounded-lg p-2" %>
  </div>

  <div>
    <%= f.label :icon_url, class: "block text-gray-700 font-semibold" %>
    <%= f.text_field :icon_url, class: "w-full border rounded-lg p-2" %>
  </div>

  <div>
    <%= f.label :target_url, class: "block text-gray-700 font-semibold" %>
    <%= f.text_field :target_url, class: "w-full border rounded-lg p-2" %>
  </div>

  <div>
    <%= f.label :scheduled_at, class: "block text-gray-700 font-semibold" %>
    <%= f.datetime_select :scheduled_at, class: "border rounded-lg" %>
  </div>

  <div>
    <%= f.label :status, class: "block text-gray-700 font-semibold" %>
    <%= f.select :status, Campaign.statuses.keys.map { |s| [s.titleize, s] }, {}, class: "w-full border rounded-lg p-2" %>
  </div>

  <div class="pt-4">
    <%= f.submit class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg" %>
  </div>
<% end %>
