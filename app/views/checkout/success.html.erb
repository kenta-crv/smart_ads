<div class="min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-2xl mx-auto">
    <div class="bg-white shadow-lg rounded-lg p-8 text-center">
      <div class="mb-6">
        <svg class="mx-auto h-16 w-16 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>
      
      <h1 class="text-3xl font-bold text-gray-900 mb-4">決済が完了しました</h1>
      
      <% if @payment %>
        <p class="text-gray-700 mb-2">支払い金額: <%= @payment.formatted_amount %></p>
        <p class="text-gray-600 mb-6">決済ID: <%= @payment.payjp_charge_id %></p>
      <% elsif @subscription %>
        <p class="text-gray-700 mb-2">プラン: <%= @subscription.plan_type.capitalize %></p>
        <p class="text-gray-600 mb-6">サブスクリプションID: <%= @subscription.payjp_subscription_id %></p>
      <% end %>
      
      <%= link_to "ダッシュボードに戻る", user_dashboard_index_path, 
          class: "inline-block bg-indigo-600 text-white py-3 px-6 rounded-lg hover:bg-indigo-700 font-medium" %>
    </div>
  </div>
</div>

