<div class="px-8 py-10 bg-gray-50 min-h-screen flex flex-col items-center">
  <div class="w-full max-w-7xl">
    <h1 class="text-4xl font-bold text-gray-900 mb-10 text-center">User Dashboard</h1>

    <!-- Metric Cards -->
    <div class="flex flex-wrap justify-center gap-8 mb-16">
      <!-- Push Subscriptions -->
      <div class="bg-white rounded-3xl shadow-lg p-8 flex flex-col justify-between h-60 w-80">
        <div>
          <h2 class="text-2xl font-semibold text-gray-800">Push Subscriptions</h2>
          <p class="text-4xl font-bold text-indigo-600 mt-4"><%= PushSubscription.count %></p>
        </div>
        <div class="mt-6 flex space-x-4">
          <%= link_to "View", "#", class: "px-6 py-3 bg-indigo-600 text-white rounded-xl hover:bg-indigo-700" %>
          <%= link_to "Manage", "#", class: "px-6 py-3 bg-gray-200 text-gray-800 rounded-xl hover:bg-gray-300" %>
        </div>
      </div>

      <!-- Campaigns -->
      <div class="bg-white rounded-3xl shadow-lg p-8 flex flex-col justify-between h-60 w-80">
        <div>
          <h2 class="text-2xl font-semibold text-gray-800">Campaigns</h2>
          <p class="text-4xl font-bold text-indigo-600 mt-4"><%= Campaign.count %></p>
        </div>
        <div class="mt-6 flex space-x-4">
          <%= link_to "View", "#", class: "px-6 py-3 bg-indigo-600 text-white rounded-xl hover:bg-indigo-700" %>
          <%= link_to "Manage", "#", class: "px-6 py-3 bg-gray-200 text-gray-800 rounded-xl hover:bg-gray-300" %>
        </div>
      </div>

      <!-- Campaign Results -->
      <div class="bg-white rounded-3xl shadow-lg p-8 flex flex-col justify-between h-60 w-80">
        <div>
          <h2 class="text-2xl font-semibold text-gray-800">Campaign Results</h2>
          <p class="text-4xl font-bold text-indigo-600 mt-4"><%= CampaignResult.count %></p>
        </div>
        <div class="mt-6 flex space-x-4">
          <%= link_to "View", "#", class: "px-6 py-3 bg-indigo-600 text-white rounded-xl hover:bg-indigo-700" %>
          <%= link_to "Manage", "#", class: "px-6 py-3 bg-gray-200 text-gray-800 rounded-xl hover:bg-gray-300" %>
        </div>
      </div>
    </div>

    <!-- Data Tables -->
    <div class="space-y-16">

      <!-- Push Subscriptions -->
      <div>
        <h2 class="text-2xl font-semibold text-gray-800 mb-4">Push Subscriptions</h2>
        <div class="bg-white rounded-xl shadow overflow-x-auto">
          <table class="w-full text-left border-collapse border border-gray-300">
            <thead class="bg-gray-100 text-gray-600 uppercase text-sm">
              <tr>
                <th class="py-3 px-6 border border-gray-300">ID</th>
                <th class="py-3 px-6 border border-gray-300">User ID</th>
                <th class="py-3 px-6 border border-gray-300">Endpoint</th>
                <th class="py-3 px-6 border border-gray-300">Browser</th>
                <th class="py-3 px-6 border border-gray-300">Status</th>
                <th class="py-3 px-6 border border-gray-300">Created At</th>
                <th class="py-3 px-6 border border-gray-300 text-right">Actions</th>
              </tr>
            </thead>
            <tbody class="text-gray-700">
              <% PushSubscription.all.each do |p| %>
                <tr class="hover:bg-gray-50">
                  <td class="py-3 px-6 border border-gray-300"><%= p.id %></td>
                  <td class="py-3 px-6 border border-gray-300"><%= p.user_id %></td>
                  <td class="py-3 px-6 border border-gray-300 truncate"><%= p.endpoint %></td>
                  <td class="py-3 px-6 border border-gray-300"><%= p.browser %></td>
                  <td class="py-3 px-6 border border-gray-300"><%= p.status %></td>
                  <td class="py-3 px-6 border border-gray-300"><%= p.created_at.strftime("%Y-%m-%d") %></td>
                  <td class="py-3 px-6 border border-gray-300 text-right space-x-3">
                    <%= link_to "👁", "#", class: "hover:text-indigo-600" %>
                    <%= link_to "✏️", "#", class: "hover:text-yellow-600" %>
                    <%= link_to "🗑", "#", data: { turbo_method: :delete, confirm: "Are you sure?" }, class: "hover:text-red-600" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>

      <!-- Campaigns -->
      <div>
        <h2 class="text-2xl font-semibold text-gray-800 mb-4">Campaigns</h2>
        <div class="bg-white rounded-xl shadow overflow-x-auto">
          <table class="w-full text-left border-collapse border border-gray-300">
            <thead class="bg-gray-100 text-gray-600 uppercase text-sm">
              <tr>
                <th class="py-3 px-6 border border-gray-300">ID</th>
                <th class="py-3 px-6 border border-gray-300">User ID</th>
                <th class="py-3 px-6 border border-gray-300">Title</th>
                <th class="py-3 px-6 border border-gray-300">Body</th>
                <th class="py-3 px-6 border border-gray-300">Icon URL</th>
                <th class="py-3 px-6 border border-gray-300">Target URL</th>
                <th class="py-3 px-6 border border-gray-300">Status</th>
                <th class="py-3 px-6 border border-gray-300">Scheduled At</th>
                <th class="py-3 px-6 border border-gray-300">Created At</th>
                <th class="py-3 px-6 border border-gray-300 text-right">Actions</th>
              </tr>
            </thead>
            <tbody class="text-gray-700">
              <% Campaign.all.each do |c| %>
                <tr class="hover:bg-gray-50">
                  <td class="py-3 px-6 border border-gray-300"><%= c.id %></td>
                  <td class="py-3 px-6 border border-gray-300"><%= c.user_id %></td>
                  <td class="py-3 px-6 border border-gray-300"><%= c.title %></td>
                  <td class="py-3 px-6 border border-gray-300 truncate"><%= c.body %></td>
                  <td class="py-3 px-6 border border-gray-300 truncate"><%= c.icon_url %></td>
                  <td class="py-3 px-6 border border-gray-300 truncate"><%= c.target_url %></td>
                  <td class="py-3 px-6 border border-gray-300"><%= c.status %></td>
                  <td class="py-3 px-6 border border-gray-300"><%= c.scheduled_at %></td>
                  <td class="py-3 px-6 border border-gray-300"><%= c.created_at.strftime("%Y-%m-%d") %></td>
                  <td class="py-3 px-6 border border-gray-300 text-right space-x-3">
                    <%= link_to "👁", "#", class: "hover:text-indigo-600" %>
                    <%= link_to "✏️", "#", class: "hover:text-yellow-600" %>
                    <%= link_to "🗑", "#", data: { turbo_method: :delete, confirm: "Are you sure?" }, class: "hover:text-red-600" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>

      <!-- Campaign Results -->
      <div>
        <h2 class="text-2xl font-semibold text-gray-800 mb-4">Campaign Results</h2>
        <div class="bg-white rounded-xl shadow overflow-x-auto">
          <table class="w-full text-left border-collapse border border-gray-300">
            <thead class="bg-gray-100 text-gray-600 uppercase text-sm">
              <tr>
                <th class="py-3 px-6 border border-gray-300">ID</th>
                <th class="py-3 px-6 border border-gray-300">Campaign ID</th>
                <th class="py-3 px-6 border border-gray-300">Push Subscription ID</th>
                <th class="py-3 px-6 border border-gray-300">Status</th>
                <th class="py-3 px-6 border border-gray-300">Delivered At</th>
                <th class="py-3 px-6 border border-gray-300">Clicked At</th>
                <th class="py-3 px-6 border border-gray-300">Error Message</th>
                <th class="py-3 px-6 border border-gray-300">Created At</th>
                <th class="py-3 px-6 border border-gray-300 text-right">Actions</th>
              </tr>
            </thead>
            <tbody class="text-gray-700">
              <% CampaignResult.all.each do |cr| %>
                <tr class="hover:bg-gray-50">
                  <td class="py-3 px-6 border border-gray-300"><%= cr.id %></td>
                  <td class="py-3 px-6 border border-gray-300"><%= cr.campaign_id %></td>
                  <td class="py-3 px-6 border border-gray-300"><%= cr.push_subscription_id %></td>
                  <td class="py-3 px-6 border border-gray-300"><%= cr.status %></td>
                  <td class="py-3 px-6 border border-gray-300"><%= cr.delivered_at %></td>
                  <td class="py-3 px-6 border border-gray-300"><%= cr.clicked_at %></td>
                  <td class="py-3 px-6 border border-gray-300 truncate"><%= cr.error_message %></td>
                  <td class="py-3 px-6 border border-gray-300"><%= cr.created_at.strftime("%Y-%m-%d") %></td>
                  <td class="py-3 px-6 border border-gray-300 text-right space-x-3">
                    <%= link_to "👁", "#", class: "hover:text-indigo-600" %>
                    <%= link_to "✏️", "#", class: "hover:text-yellow-600" %>
                    <%= link_to "🗑", "#", data: { turbo_method: :delete, confirm: "Are you sure?" }, class: "hover:text-red-600" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>

    </div>
  </div>
</div>
